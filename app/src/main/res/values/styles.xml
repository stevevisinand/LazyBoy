    <color name="light_grey">#e6eced</color>

    <color name="primary">#844400</color>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">


        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
